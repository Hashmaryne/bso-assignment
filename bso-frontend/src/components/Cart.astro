---
interface CartItem {
  id: number;
  name: string;
  price: number;
  quantity: number;
}

interface CartProps {
  items: CartItem[];
  total: number;
}

const { items, total } = Astro.props as CartProps;
---
<div class="cart">
  {items.length > 0 ? (
    <ul>
      {items.map(item => (
        <li>
          <h3>{item.name}</h3>
          <p>Price: ${item.price.toFixed(2)} x {item.quantity}</p>
        </li>
      ))}
    </ul>
  ) : (
    <p>Your cart is empty.</p>
  )}
  <p>Total: ${total.toFixed(2)}</p>
  <button>Proceed to Checkout</button>
</div>
